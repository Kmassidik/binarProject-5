    "components": {
      "schemas": {
        "User": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64",
              "example": 10
            },
            "username": {
              "type": "string",
              "example": "admin"
            },
            "password": {
              "type": "string",
              "example": "binar25"
            },
            "email": {
              "type": "string",
              "example": "binar25@email.com"
            },
            "experience": {
              "type": "number",
              "example": 1945
            },
            "lvl": {
              "type": "number",
              "example": 50
            }
          }
        },
        "Exp": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int64",
              "example": 10
            },
            "experience": {
              "type": "number",
              "example": 123
            }
          }
        }
      },
      "requestBodies": {
        "UserArray": {
          "description": "List of user object",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
